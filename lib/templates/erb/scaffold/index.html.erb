<div class="page-header">
  <h1><%%= t('admin.<%= singular_table_name.gsub("admin_", "") %>.<%= singular_table_name.gsub("admin_", "") %>') %> <%%= t('admin.list') %>
</h1>
</div>

<div>
  <div class="pull-left">
    <%%= link_to t('admin.new') + t('admin.<%= singular_table_name.gsub("admin_", "") %>.<%= singular_table_name.gsub("admin_", "") %>'), new_<%= singular_table_name %>_path, :class => 'btn btn-primary' %>
  </div>
  <div class="pull-right">
    <%%= search_form_for(@search, :url => <%= plural_table_name %>_path) do |f| %>
      <%%= f.text_field :"#{@search_key}", :style => "margin-top:10px;" %>
      <%%= f.submit "#{t('admin.search')}", :class => "btn btn-default btn-sm" %> 
    <%% end %>
  </div>
  <p style="clear:both;"></p>
</div>

<div class="table-responsive">
<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%%= t('admin._no') %></th>
<% attributes.reject(&:password_digest?).each do |attribute| -%>
      <th><%= attribute.human_name %></th>
<% end -%>
<th><%%= t('admin.action') %></th>
    </tr>
  </thead>

  <tbody>
    <%% @<%= plural_table_name.gsub('admin_', '') %>.each do |<%= singular_table_name.gsub('admin_', '') %>| %>
      <tr>
        <td>
          <%%= link_to <%= singular_table_name.gsub('admin_', '') %>.id, <%= singular_table_name %>_path(<%= singular_table_name.gsub('admin_', '') %>) %>
        </td>
        <% attributes.reject(&:password_digest?).each do |attribute| -%>
        <td><%%= <%= singular_table_name.gsub('admin_', '') %>.<%= attribute.name %> %></td>
<% end -%>
        <td>
          <%%= link_to t('admin.show'), <%= singular_table_name %>_path(<%= singular_table_name.gsub('admin_', '') %>), :class => 'btn btn-default btn-sm' %>
          <%%= link_to t('admin.edit'), edit_<%= singular_table_name %>_path(<%= singular_table_name.gsub('admin_', '') %>), :class => 'btn btn-default btn-sm' %>
          <%%= link_to t('admin.delete'), <%= singular_table_name %>_path(<%= singular_table_name.gsub('admin_', '') %>), method: :delete, data: { confirm: t('admin.confirm_delete') }, :class => 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <%% end %>
  </tbody>
</table>
</div>

<%%= paginate @<%= plural_table_name.gsub('admin_', '') %> %>
